    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'pkg-upd'",
            "cargo": {
                "args": ["build", "--bin=pkg-upd", "--package=pkg-upd"],
                "filter": {
                    "name": "pkg-upd",
                    "kind": "bin"
                }
            },
            "args": [
                "pkg-upd/test-data/deserialize-full.pkg.toml",
                "--log-level",
                "trace"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'pkg-upd'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib=pkg-upd",
                    "--package=pkg-upd"
                ],
                "filter": {
                    "name": "pkg-upd",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
